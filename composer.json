{
    "name": "byrmstf/hidden-url",
    "description": "Secure file access system with hash-based URLs",
    "type": "project",
    "keywords": [
        "php",
        "security",
        "file-access",
        "hash",
        "url",
        "pdf",
        "media"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Mustafa Bayram",
            "email": "info@mustafabayram.com.tr",
            "homepage": "https://mustafabayram.com.tr",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "info@mustafabayram.com.tr",
        "issues": "https://github.com/byrmstf/hidden-url/issues",
        "source": "https://github.com/byrmstf/hidden-url",
        "docs": "https://github.com/byrmstf/hidden-url#readme"
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "HiddenUrl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HiddenUrl\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "stan": "phpstan analyse src/",
        "quality": [
            "@cs-check",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
